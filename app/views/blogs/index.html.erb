<p class="green-text"><%= notice %></p>

<div class="top">
  <h1 class="blog_title">Blogs_name</h1> 
    <%= image_tag("/default_images/coming_soon.png", alt: "Top image") %>
</div>

<div class="blog_contents">
  <h2 class="contents_title">blog_contents</h2>
  <% @blogs.each do |blog| %>
    <div class="blog_content">
      <div id="<%= dom_id blog %>">
        <div class="output">
          <strong>Title:</strong>
          <%= link_to blog.title, blog %>
        </div>
        <div class="output">
          <strong>Category:</strong>
          <%= blog.category.to_s.humanize %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "Login", new_admin_session_path %>

<% if Admin.count.zero? %>
  <%= link_to "Signup", new_admin_registration_path %>
<% end %>
